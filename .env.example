GITHUB_SECRET=

# API / Backend
PORT=4000
NODE_ENV=development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/contentguard?schema=public
REDIS_URL=redis://localhost:6379
JWT_SECRET=replace-me

# Web
NEXT_PUBLIC_API_URL=http://localhost:4000
