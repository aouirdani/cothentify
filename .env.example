HUGGINGFACE_API_TOKEN=

# AWS (optional; use real S3 or R2 in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Web flags (optional)
NEXT_PUBLIC_ENABLE_HF_DETECTOR=false

# Stripe (optional)
STRIPE_SECRET_KEY=
